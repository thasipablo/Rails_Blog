<%= form_with model: @comment, url: user_post_comments_path(@current_user.id, @post.id), method: :post, local: true do |f| %>
  <div>
    <%= f.label :text%><br>
    <%= f.text_area :text, class:'rounded border-2 border-gray-300' %>
  </div>
  <div>
    <%=f.submit 'Comment', class:'bg-gray-700 text-white border-2 rounded text-gray-600 cursor-pointer py-2 px-4' %>
  </div>
<%end%>
<%= render partial: "partials/errors", locals: { errors: @comment.errors } %>