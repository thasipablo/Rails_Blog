<div class=''>
  <h4 class='text-xl bp-3'>
    <%= link_to user_post_path(post.user,post) do %> 
      <div class='py-2'>
        <span class='text-gray-400'>#<%=index + 1%></span>
        <%=post.title%>
      </div>
    <%end%>
  </h4>
  <div class=''>
    <div class=''>
      <%=post.text%>
    </div>
    <div class='text-sm text-gray-600'>
      <span>Comment: <%=post.comments_counter%>, </span>
      <span>Like: <%=post.likes_counter%> </span>
    </div>
  </div>
</div>