<div class="user-list">
  <div class="flex justify-between">
    <h3 class="text-2xl"><%= "Post ##{@post.id} by #{@author.name}" %></h3>
    <p class="text-sm text-gray-500">Comments: <%= @post.comments.count %>, Likes: <%= @post.likes.count %></p>
  </div>
  <div class="py-4">
    <h3 class="text-3xl"><%= @post.title %></h3>
    <p><%= @post.text %></p>
  </div>
  <div>
    <%=button_to 'Like', user_post_likes_path(@current_user.id, @post), method: :post ,  class:' px-4 bg-green-600 text-white border-2 rounded text-gray-600'%>
  </div>
  <div class="mt-4">
    <%= render 'comments/new' %>
  </div>
  <ul>
    <% @post.comments.each do |comment| %>
    <li><%= "#{comment.user.name}: #{comment.text}" %></li>
    <% end %>
  </ul>
</div>